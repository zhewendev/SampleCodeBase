<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Right Fragment"/>
    <Button
        android:id="@+id/btn_handler_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_center"
        android:layout_centerHorizontal="true"
        android:text="Handler发送消息"/>
    <Button
        android:id="@+id/btn_broadcast_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_handler_connect"
        android:layout_centerHorizontal="true"
        android:text="Broadcast发送消息"/>
    <Button
        android:id="@+id/btn_event_bus_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_broadcast_connect"
        android:layout_centerHorizontal="true"
        android:text="event bus发送消息"/>
    <Button
        android:id="@+id/btn_interface_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_event_bus_connect"
        android:layout_centerHorizontal="true"
        android:text="接口回调通信"/>
    <Button
        android:id="@+id/btn_get_arguments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_event_bus_connect"
        android:layout_centerHorizontal="true"
        android:text="获取setArgument()的传值"/>
    <Button
        android:id="@+id/btn_send_third_fragment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_get_arguments"
        android:layout_centerHorizontal="true"
        android:text="传递给ThirdFragment页面的值"/>
    <Button
        android:id="@+id/btn_connect_with_other_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_send_third_fragment_value"
        android:layout_centerHorizontal="true"
        android:text="获取其他Fragment实例，进行通信"/>

</RelativeLayout>